        				android:title="@string/pointage_couleur_v"/>
	    		    
	    		    <view.custom.ColorPickerPreferenceDialog
	    		        android:key="pointingline_color_h"
        				android:title="@string/pointage_couleur_h"/>
	    		    
	    		    <view.custom.SeekBarPreference
	    		        android:key="pointingline_size"
        				android:title="@string/pointage_ligne_taille"
