<?xml version="1.0" encoding="utf-8"?>
	<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="preferences">
		
			<PreferenceCategory
			    android:title="OneSwitch Service">
	    		    <ListPreference
		        android:id="@+id/pref_pointing"
		        android:key="pref_pointing"
		        android:entries="@array/pointages"
		        android:entryValues="@array/pointages"
		        android:title="@string/pointage"
		        android:dialogTitle="@string/pointage_description"/>
	    		    
	    		    <view.custom.SeekBarPreference
	    		        android:key="scroll_speed"
        				android:title="@string/scroll_speed"
