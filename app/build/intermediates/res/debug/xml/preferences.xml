                        android:key="service_color"
                        android:title="@string/service_color"
                        />

                    <view.custom.SeekBarPreference
                        android:key="service_opacity"
                        android:title="@string/service_opacity"
                        />
	    
	    </PreferenceCategory>
	    
			<PreferenceCategory
			    android:title="Line Pointing Configuration"> 		    
	    		    <view.custom.ColorPickerPreferenceDialog
