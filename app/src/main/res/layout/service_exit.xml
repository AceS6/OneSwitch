<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <FrameLayout
        android:id="@+id/frame_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </FrameLayout>

    <TextView
        android:id="@+id/exit_message"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:text="Etes-vous sÃ»r(e) de vouloir quitter OneSwitch ?"
        android:layout_gravity="top"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:focusable="false"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:columnOrderPreserved="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:layout_gravity="bottom"
        android:layout_below="@id/exit_message"
        android:clickable="false"
        android:focusable="false">

        <ImageButton
            style="@style/AppBaseTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton1"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/ic_confirm_true"
            android:background="@drawable/option_button"
            android:padding="5dp"
            android:alpha="0.5"
            android:clickable="false"
            android:focusable="false"/>

        <ImageButton
            style="@style/AppBaseTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/ic_confirm_false"
            android:background="@drawable/option_button"
            android:padding="5dp"
            android:alpha="0.5"
            android:clickable="false"
            android:focusable="false"/>

    </GridLayout>

</RelativeLayout>


