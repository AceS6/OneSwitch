<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_blue"
        android:alpha="0.7">
    </FrameLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_marginBottom="5dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:columnOrderPreserved="true"
            android:layout_centerInParent="true"
            android:layout_gravity="bottom">


            <ImageButton
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton1"
                android:layout_row="2"
                android:layout_column="2"
                android:src="@drawable/ic_action_return"
                android:background="@drawable/option_button"
                android:padding="5dp"
                android:alpha="0.5"/>

            <ImageButton
                style="@style/AppBaseTheme"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton2"
                android:layout_row="2"
                android:layout_column="1"
                android:src="@drawable/ic_action_home"
                android:background="@drawable/option_button"
                android:padding="5dp"
                android:alpha="0.5" />

            <ImageButton
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:layout_row="2"
                android:layout_column="0"
                android:src="@drawable/ic_action_params"
                android:background="@drawable/option_button"
                android:padding="5dp"
                android:alpha="0.5" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4"
                android:layout_row="1"
                android:layout_column="0"
                style="@style/AppBaseTheme"
                android:src="@drawable/ic_action_phone"
                android:background="@drawable/option_button"
                android:padding="5dp"
                android:alpha="0.5" />

            <ImageButton
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton5"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/ic_action_movements"
                android:background="@drawable/option_button"
                android:padding="5dp"
                android:alpha="0.5" />

            <ImageButton
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton6"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/ic_action_slider"
                android:background="@drawable/option_button"
                android:padding="5dp"
                android:alpha="0.5" />

            <ImageButton
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton7"
                android:layout_row="0"
                android:layout_column="2"
                android:src="@drawable/ic_action_volume"
                android:background="@drawable/option_button"
                android:padding="5dp"
                android:alpha="0.5" />

            <ImageButton
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton8"
                android:layout_row="1"
                android:layout_column="2"
                android:src="@drawable/ic_action_exit"
                android:background="@drawable/option_button"
                android:padding="5dp"
                android:alpha="0.5" />

        </GridLayout>
    </LinearLayout>

</RelativeLayout>


